@page
@model Server.Pages.FileManager.Step05.UploadFile1

@{
	Layout =
		"Layouts/_LayoutFileManager";

	ViewData["PageTitle"] = "Upload File (1)";
}

<form method="post" enctype="multipart/form-data">

	<div class="row">
		<div class="col-12 p-3 col-md-8 offset-md-2 p-md-5 bg-light border border-2 rounded-3 shadow-lg">
			<legend>
				Upload File (Note: Microsoft.AspNetCore.Mvc.RequestFormLimits)
			</legend>

			<hr />

			<div class="mb-3">
				<label for="file" class="form-label">Select File</label>
				<input type="file" id="file" name="file" class="form-control" aria-label="Select File" />
			</div>

			<button type="submit" class="btn btn-primary">Upload File</button>
			<button type="reset" class="btn btn-secondary">Reset</button>
		</div>
	</div>

</form>

@section Scripts
{
<script>

	$(function() {

		$('form').submit(function (e) {

			if ($(this).valid()) {

				$('button').prop('disabled', true)
				$('input[type=button]').prop('disabled', true)

			}

		})

	})

</script>
}
