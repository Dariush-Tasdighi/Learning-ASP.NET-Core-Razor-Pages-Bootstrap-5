@page
@model Server.Pages.FileManager.Step05.UploadMultipleFiles1

@{
	Layout =
		"Layouts/_LayoutFileManager";

	ViewData["PageTitle"] = "Upload Multiple Files0 (0)";
}

<form method="post" enctype="multipart/form-data">

	<div class="row">
		<div class="col-12 p-3 col-md-8 offset-md-2 p-md-5 bg-light border border-2 rounded-3 shadow-lg">
			<legend>
				Upload File (Note: multiple)
			</legend>

			<hr />

			<div class="mb-3">
				<label asp-for="ViewModel.Files" class="form-label"></label>
				<input asp-for="ViewModel.Files" class="form-control" />
				<span asp-validation-for="ViewModel.Files" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<div class="form-check">
					<input asp-for="ViewModel.OverwriteIfFileExists" class="form-check-input" />
					<label asp-for="ViewModel.OverwriteIfFileExists" class="form-check-label"></label>
				</div>
			</div>

			<button type="submit" class="btn btn-primary">Upload File</button>
			<button type="reset" class="btn btn-secondary">Reset</button>
		</div>
	</div>

</form>

@section Scripts
{
<script>

	$(function() {

		$('form').submit(function (e) {

			if ($(this).valid()) {

				$('button').prop('disabled', true)
				$('input[type=button]').prop('disabled', true)

			}

		})

	})

</script>
}
