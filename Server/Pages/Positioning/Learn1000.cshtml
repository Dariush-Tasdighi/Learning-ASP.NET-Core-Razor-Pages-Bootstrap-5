@page

<!doctype html>

<html lang="en-US" dir="ltr">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title>Learn</title>

	<link rel="icon" href="/favicon.ico" />
	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
	<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
</head>

<body>
	<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
		<div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
			<div class="toast-header">
				@*<img src="..." class="rounded me-2" alt="...">*@
				<i class="bi bi-heart-fill text-danger me-2"></i>
				<strong class="me-auto">Bootstrap</strong>
				<small>11 mins ago</small>
				<button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
			</div>
			<div class="toast-body">
				Hello, World! This is a toast message.
			</div>
		</div>
	</div>

	<div class="container">
		<h1 class="p-2 m-3 border rounded shadow-lg">
			&raquo; Bootstrap Toast
		</h1>
	</div>

	<div class="container">
		<button type="button" class="btn btn-primary" id="liveToastButton">Show Live Toast</button>
	</div>

	<hr />

	<div class="container">
		<h3>
			&mdash; Reference
		</h3>

		<a href="https://getbootstrap.com/docs/5.1/components/toasts/" target="_blank">Toasts</a>
	</div>

	<hr />

	<script src="~/lib/bootstrap/js/bootstrap.js"></script>

	<script>
		var liveToast =
			document.getElementById('liveToast')

		var liveToastButton =
			document.getElementById('liveToastButton')

		if (liveToastButton) {

		  liveToastButton.addEventListener('click', function () {

			var toast =
				new bootstrap.Toast(liveToast)

			toast.show()

		  })
		}
	</script>
</body>
</html>
